<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
or<br>
<%= link_to image_tag('fb.png',:alt => "Log in with Facebook"), auth_at_provider_path(:provider => :facebook),:rel=>"external" %>
